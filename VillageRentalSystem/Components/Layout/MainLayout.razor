@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">VillageRentals</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav" ColumnSpacing="10">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <button class="nav-link btn btn-light" @onclick="GoToHome">Home</button>
                </li>
				<li class="nav-item">
                    <button class="nav-link btn btn-light" @onclick="GoToCustomers">Customers</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link btn btn-light" @onclick="GoToRentals">Rentals</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link btn btn-light" @onclick="GoToEquipment">Equipment</button>
                </li>
            </ul>
        </div>
    </div>
</nav>

@Body

 @code {
     private void GoToHome()
				{
					NavigationManager.NavigateTo("/");
				}

     private void GoToCustomers()
                {
                    NavigationManager.NavigateTo("/displaycustomers");
                }

    private void GoToRentals()
                {
                    NavigationManager.NavigateTo("/rentals");
                }
    private void GoToEquipment()
                {
                    NavigationManager.NavigateTo("/equipment");
                }
}



